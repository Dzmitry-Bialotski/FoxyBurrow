{
  "Logging": {
    "Console": {
      "LogLevel": {
        "Default": "Error",
        "Microsoft*": "Information"
      }
    },
    "Debug": {
      "LogLevel": {
        "Default": "Error",
        "Microsoft*": "Information"
      }
    },
    "LogLevel": {
      "Default": "Trace",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Azure": {
    "SignalR": {
      "Enabled": "true"
    }
  },
  "EmailSettings": {
    "EmailHost": "smtp.gmail.com",
    "EmailPort": 465
  },
  "ImagePath": {
    "DefaultAvatarPath": "~/img/avatar/Default.png",
    "AvatarDirectory": "~/img/avatar/",
    "PostImageDirectory": "~/img/post/"
  }
}